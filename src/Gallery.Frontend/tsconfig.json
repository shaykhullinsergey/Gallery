{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "controls/*": ["Controls/*"]
    }
  }
}